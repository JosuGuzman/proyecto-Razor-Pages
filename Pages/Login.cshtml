@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
</head>
<body>
    <form method="post">
        <h2>Iniciar sesión</h2>
        <p>
            <label>Usuario:</label>
            <input asp-for="Username" />
        </p>
        <p>
            <label>Contraseña:</label>
            <input asp-for="Password" type="password" />
        </p>
        <p style="color:red">@Model.ErrorMessage</p>
        <button type="submit">Ingresar</button>
    </form>
</body>
</html>